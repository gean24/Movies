<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Dialog" parent="android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Button_Blue_WithOut_Corner" parent="Widget.AppCompat.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:background">@color/purple_500</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Button_Red_WithOut_Corner" parent="Widget.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:background">@color/purple_500</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Button_Blue_With_Corner" parent="Widget.AppCompat.Button">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="cornerRadius">25dp</item>
        <item name="android:background">@drawable/background_rounded_blue</item>
    </style>

    <style name="Material.TextInputLayout" parent="android:Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="hintEnabled">false</item>
    </style>
    <style name="Material.TextInputEditText" parent="android:Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">text</item>
        <item name="android:background">@color/white</item>

        <item name="android:maxLines">1</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>
    <style name="Title_Text_Black_Bold">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Subtitle_Text_Black">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="Title_Text_Black">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Title_Text_White">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="toolbarText" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleTextColor">@color/purple_500</item>
        <item name="android:background">#26FFC500</item>
        <item name="android:elevation" tools:ignore="NewApi">0dp</item>
        <item name="titleTextAppearance">@style/toolbarText</item>
    </style>

</resources>
